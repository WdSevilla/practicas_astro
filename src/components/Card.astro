---
const Cards = "div";
const Container = "div";

export interface Props {
   nombre:string;
   ocupacion?:string;
   avatar:boolean;
}
const {nombre,ocupacion="Sin definir ", avatar} = Astro.props
---
 
<Cards class="card">
    <img src={avatar ? "images/img1.jpg" : "images/img2.jpg"} alt="iamgen" style="width: 100%;">
    <Container class="container">
        <h4><b>{nombre}</b></h4>
        <p>{ocupacion}</p>
        <slot name="desc">
            <p>Contenido de la Descripccion </p>
        </slot>
    </Container>
</Cards>

<style>
    .card{
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        margin-left: 50px;
        width: 15%;
        margin-bottom: 15px;
        padding: 20px;
    }
    .card:hover{
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }
    .container{
        padding: 2px 16px;
    }
</style>